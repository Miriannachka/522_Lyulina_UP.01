<Page x:Class="_522_Lyulina.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Lyulina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid HorizontalAlignment="Center"
          Width="800"
          Height="450"
          VerticalAlignment="Top">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*" />
            <ColumnDefinition Width="529*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="217*" />
            <RowDefinition Height="233*" />
        </Grid.RowDefinitions>

        <Label Content="Логин:"
               x:Name="labelLogin"
               Grid.Row="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="0,0,10,69"
               />
        <Label Content="Пароль:"
               x:Name="labelPass"
               Grid.Row="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="0,0,10,24"
               Grid.RowSpan="2" />

        <TextBox x:Name="TextBoxLogin"
                 Background="Transparent"
                 Margin="62,0,0,69"
                 TextWrapping="Wrap"
                 ToolTip="Введите логин или почту"
                 TextChanged="TextBoxLogin_TextChanged"
                 Height="34"
                 VerticalAlignment="Bottom"
                 HorizontalAlignment="Left"
                 Width="250"
                 Grid.Column="1" />

        <PasswordBox x:Name="PasswordBox"
                     Background="Transparent"
                     ToolTip="Введите пароль"
                     Margin="62,0,0,24"
                     HorizontalAlignment="Left"
                     Width="250"
                     Height="34"
                     VerticalAlignment="Bottom"
                     Grid.Column="1"
                     PasswordChanged="PasswordBox_PasswordChanged" />

        <Button x:Name="ButtonEnter"
                Margin="62,20,0,0"
                Height="34"
                Content="Вход"
                ToolTip="Кнопка входа"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="250"
                VerticalAlignment="Top"
                Grid.Column="1"
                Click="ButtonEnter_OnClick" />

        <Button x:Name="ButtonReg"
                Margin="62,68,0,0"
                Height="34"
                Content="Регистрация"
                ToolTip="Кнопка регистрации"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="250"
                VerticalAlignment="Top"
                Grid.Column="1"
                Click="ButtonReg_Click" />

        <Button x:Name="ButtonChangePassword"
                Margin="62,116,0,0"
                Height="34"
                Content="Смена пароля"
                ToolTip="Кнопка смены пароля"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="250"
                VerticalAlignment="Top"
                Grid.Column="1"
                Click="ButtonChangePassword_Click" />

        <Label Content="Капча:"
               x:Name="labelCaptcha"
               Margin="178,104,0,87"
               HorizontalAlignment="Left"
               Width="54"
               Visibility="Hidden"
               Grid.RowSpan="2" />

        <TextBox Grid.Column="1"
                 CommandManager.PreviewExecuted="textBox_PreviewExecuted"
                 ContextMenu="{x:Null}"
                 Visibility="Hidden"
                 x:Name="captcha"
                 Height="42"
                 Foreground="Red"
                 FontStyle="Italic"
                 FontWeight="Heavy"
                 VerticalAlignment="Top"
                 Width="156"
                 Background="{x:Null}"
                 FontStretch="UltraCondensed"
                 IsReadOnly="True"
                 HorizontalContentAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="62,96,0,0"  VerticalContentAlignment="Center"
                 FontSize="20" />

        <TextBox Grid.Column="1"
                 Visibility="Hidden"
                 x:Name="captchaInput"
                 HorizontalAlignment="Left"
                 Height="34"
                 Margin="62,150,0,0" TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 Width="160" />

        <Button x:Name="submitCaptcha"
                Margin="62,20,0,0"
                Visibility="Hidden"
                Height="34"
                Content="Подтвердить"
                ToolTip="Подтвердить ввод капчи"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="250" VerticalAlignment="Top"
                Grid.Column="1"
                Click="submitCaptcha_Click" />

    </Grid>
</Page>