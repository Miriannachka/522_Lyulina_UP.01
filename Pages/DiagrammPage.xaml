<Page x:Class="_522_Lyulina.Pages.DiagrammPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:wfh="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
    xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      xmlns:local="clr-namespace:_522_Lyulina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Диаграммы платежей">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">

            <TextBlock Text="Пользователь:" VerticalAlignment="Center" Margin="10,0"/>
            <ComboBox x:Name="CmbUser" 
                      Width="150" 
                      Margin="5"
                      DisplayMemberPath="FIO" 
                      SelectionChanged="UpdateChart"/>
            <TextBlock Text="Тип диаграммы:" VerticalAlignment="Center" Margin="10,0"/>
            <ComboBox x:Name="CmbDiagram" 
                      Width="150" 
                      Margin="5"
                      SelectionChanged="UpdateChart"/>
            <Button x:Name="BtnExportExcel" Content="Экспорт в Excel" 
                    Margin="15,5" Padding="10,5" 
                    Click="BtnExportExcel_Click"/>

            <Button x:Name="BtnExportWord" Content="Экспорт в Word" 
                    Margin="5,5,15,5" Padding="10,5"
                    Click="BtnExportWord_Click"/>
        </StackPanel>

        <wfh:WindowsFormsHost Grid.Row="1" Margin="5">
            <charts:Chart x:Name="ChartPayments">
                <charts:Chart.Legends>
                    <charts:Legend/>
                </charts:Chart.Legends>
            </charts:Chart>
        </wfh:WindowsFormsHost>
    </Grid>
</Page>