<Page x:Class="_522_Lyulina.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Lyulina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление/редактирование категории">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название категории" Grid.Row="0" Grid.Column="0" 
                   FontSize="20" Margin="20" VerticalAlignment="Center"/>

        <TextBox x:Name="TBCategoryName" Grid.Row="0" Grid.Column="1"
                 Margin="20" Width="300"
                 Text="{Binding Name}" />

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="20">
            <Button x:Name="ButtonSaveCategory" Content="Сохранить"
                    Click="ButtonSaveCategory_Click" Width="150" Margin="10"/>
            <Button x:Name="ButtonClean" Content="Очистить"
                    Click="ButtonClean_Click" Width="150" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
