<Page x:Class="_522_Lyulina.Pages.AddPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Lyulina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление/редактирование платежа">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название платежа" Grid.Row="0" Grid.Column="0" FontSize="20" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="TBPaymentName" Grid.Row="0" Grid.Column="1" Margin="10" Text="{Binding Name}"/>

        <TextBlock Text="Сумма" Grid.Row="1" Grid.Column="0" FontSize="20" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="TBAmount" Grid.Row="1" Grid.Column="1" Margin="10" Text="{Binding Price}"/>

        <TextBlock Text="Количество" Grid.Row="2" Grid.Column="0" FontSize="20" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="TBCount" Grid.Row="2" Grid.Column="1" Margin="10" Text="{Binding Num}"/>

        <TextBlock Text="Дата" Grid.Row="3" Grid.Column="0" FontSize="20" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="TBDate" Grid.Row="3" Grid.Column="1" Margin="10" Text="{Binding Date}"/>

        <TextBlock Text="Клиент (ФИО)" Grid.Row="4" Grid.Column="0" FontSize="20" Margin="10" VerticalAlignment="Center"/>
        <ComboBox x:Name="CBUser" Grid.Row="4" Grid.Column="1" Margin="10"
                  SelectedValuePath="ID"
                  SelectedValue="{Binding UserID}"/>

        <TextBlock Text="Категория" Grid.Row="5" Grid.Column="0" FontSize="20" Margin="10" VerticalAlignment="Center"/>
        <ComboBox x:Name="CBCategory" Grid.Row="5" Grid.Column="1" Margin="10"
                  SelectedValuePath="ID"
                  SelectedValue="{Binding CategoryID}"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button x:Name="ButtonSave" Content="Сохранить" Click="ButtonSave_Click" Width="150" Margin="10"/>
            <Button x:Name="ButtonClean" Content="Очистить" Click="ButtonClean_Click" Width="150" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
