<Page x:Class="_522_Lyulina.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Lyulina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление/редактирование пользователя">

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Логин" Grid.Row="0" Grid.Column="0" Margin="10,0,0,0" FontSize="20" VerticalAlignment="Center" />
            <TextBox x:Name="TBLogin" Text="{Binding Login}" Grid.Row="0" ToolTip="Введите логин" Grid.Column="1" Margin="10,5,71,5" />

            <TextBlock Text="Пароль" Grid.Row="1" Grid.Column="0" Margin="10,0,0,0" FontSize="20" VerticalAlignment="Center" />
            <TextBox x:Name="TBPass" Text="{Binding Password}" Grid.Column="1" ToolTip="Введите пароль" Margin="10,5,71,5" Grid.Row="1" />

            <TextBlock Text="Роль" Grid.Row="2" Grid.Column="0" Margin="10,0,0,0" FontSize="20" VerticalAlignment="Center" />
            <ComboBox Name="cmbRole" SelectedItem="{Binding Role}" ToolTip="Выберите роль" Grid.Row="2" Grid.Column="1" Margin="10,5,71,5">
                <ComboBoxItem Content="Admin" />
                <ComboBoxItem Content="User" />
            </ComboBox>

            <TextBlock Text="ФИО" Grid.Row="3" Grid.Column="0" Margin="10,0,0,0" FontSize="20" VerticalAlignment="Center" />
            <TextBox x:Name="TBFio" Text="{Binding FIO}" Grid.Row="3" ToolTip="Введите ФИО" Grid.Column="1" Margin="10,5,71,5" />

            <TextBlock Text="Фото (необязательно)" Grid.Row="4" Grid.Column="0" Margin="10,0,0,0" FontSize="20" VerticalAlignment="Center" />
            <TextBox x:Name="TBPhoto" Text="{Binding Photo}" Grid.Row="4" ToolTip="Добавьте фото" Grid.Column="1" Margin="10,5,71,5" />

            <Button x:Name="ButtonSave" Content="Сохранить" Grid.Row="6" Click="ButtonSave_Click" 
                Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="150" Margin="0,0,10,0" />
            <Button x:Name="ButtonClean" Content="Очистить" Grid.Row="6" Click="ButtonClean_Click" 
                Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="150" Margin="10,0,0,0" />
        </Grid>
    </Page>
